<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0" exclude-result-prefixes="fo ltr chk" xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:fo="http://www.w3.org/1999/XSL/Format" xmlns:ltr="LTR" xmlns:chk="LTR:chk">
	<xsl:output encoding="UTF-8" indent="no" method="html" omit-xml-declaration="yes"/>
	
	<xsl:decimal-format name="rub" decimal-separator="," grouping-separator=" " zero-digit="0"/>
	<xsl:decimal-format name="filesize" decimal-separator="," grouping-separator=" "/>
	<xsl:decimal-format name="normal" decimal-separator="." grouping-separator=" " NaN="-"/>
	
	<xsl:template name="site_title">ЛитРес</xsl:template>
	<xsl:template name="URLTitle">www.litres.ru</xsl:template>
	<xsl:template name="roubles"> руб.</xsl:template>
	
	<xsl:variable name="URLTitle"><xsl:call-template name="URLTitle"/></xsl:variable>
	<xsl:variable name="site_name"><xsl:call-template name="site_title"/></xsl:variable>	
	
</xsl:stylesheet>
